{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^typecheck"],
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**"],
      "outputLogs": "errors-only"
    },
    "lint": {
      "inputs": ["src/**/*.ts"],
      "outputLogs": "errors-only"
    },
    "lint:check": {
      "inputs": ["src/**/*.ts"],
      "outputLogs": "errors-only"
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["src/**/*.spec.ts"],
      "outputLogs": "errors-only"
    },
    "test:coverage": {
      "dependsOn": ["^test", "build"],
      "inputs": ["src/**/*.spec.ts"],
      "outputLogs": "full"
    },
    "format": {
      "outputLogs": "errors-only"
    },
    "format:check": {
      "outputLogs": "errors-only"
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts"],
      "outputLogs": "errors-only"
    },

    "openapi:bundle": {
      "inputs": ["openapi/index.yaml.template"],
      "outputs": ["openapi/index.yaml", "openapi/common-definitions.yaml"]
    },

    "generate:definitions": {
      "dependsOn": ["openapi:bundle"],
      "inputs": ["openapi/index.yaml"],
      "outputs": ["generated/definitions"]
    },

    "generate:backend-notification-hub": {
      "outputs": ["generated/notifications"]
    },

    "generate:payment-updater": {
      "inputs": ["openapi/payment-updater.yaml"],
      "outputs": ["generated/payment-updater"]
    },

    "generate:avro": {
      "inputs": ["avro/message-status.json", "avro/message.json"],
      "outputs": ["generated/avro"]
    },

    "//#test:coverage": {
      "dependsOn": [
        "citizen-func#generate:definitions",
        "sending-func#generate:definitions",
        "sending-func#generate:backend-notification-hub",
        "cqrs-func#generate:payment-updater",
        "cqrs-func#generate:avro"
      ],
      "inputs": ["apps/**/src/**/*.ts", "packages/**/src/**/*.ts"],
      "outputs": ["coverage"],
      "outputLogs": "errors-only"
    }
  }
}
