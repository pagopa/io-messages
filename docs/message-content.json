{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MessageContent",
  "description": "A schema defining all the informations that can be found inside the message-content storage.",
  "type": "object",
  "properties": {
    "payment_data": {
      "type": "object",
      "description": "",
      "properties": {
        "amount": {
          "type": "integer",
          "description": "",
          "minimum": 0,
          "maximum": 9999999999
        },
        "notice_number": {
          "type": "string",
          "description": "",
          "pattern": "^[0123][0-9]{17}$"
        },
        "invalid_after_due_date": {
          "type": "boolean",
          "description": "",
          "default": false
        },
        "payee": {
          "type": "object",
          "properties": {
            "fiscal_code": {
              "type": "string",
              "description": "",
              "pattern": "^[0-9]{11}$"
            }
          }
        }
      },
      "required": ["amount", "notice_number"]
    },
    "prescription_data": {
      "type": "object",
      "description": "",
      "properties": {
        "nre": {
          "type": "string"
        },
        "iup": {
          "type": "string"
        },
        "prescriber_fiscal_code": {
          "type": "string",
          "pattern": "^[A-Z]{6}[0-9LMNPQRSTUV]{2}[ABCDEHLMPRST][0-9LMNPQRSTUV]{2}[A-Z][0-9LMNPQRSTUV]{3}[A-Z]$"
        }
      },
      "required": ["nre"]
    },
    "legal_data": {
      "type": "object",
      "properties": {
        "sender_mail_from": {
          "type": "string",
          "minLength": 1
        },
        "has_attachments": {
          "type": "boolean",
          "default": false
        },
        "message_unique_id": {
          "type": "string",
          "minLength": 1
        },
        "original_message_url": {
          "type": "string",
          "minLength": 1
        },
        "pec_server_service_id": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["sender_mail_from", "has_attachments", "message_unique_id"]
    },
    "eu_covid_cert": {
      "type": "object",
      "properties": {
        "auth_code": {
          "type": "string"
        }
      }
    },
    "third_party_data": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "original_sender": {
          "type": "string",
          "minLength": 1
        },
        "original_receipt_date": {
          "type": {
            "type": "string"
          }
        },
        "has_attachments": {
          "type": "boolean",
          "default": false
        },
        "has_remote_content": {
          "type": "boolean",
          "default": false
        },
        "has_precondition": {
          "enum": ["ALWAYS", "ONCE", "NEVER"]
        },
        "summary": {
          "type": "string",
          "minLength": 1
        },
        "configuration_id": {
          "type": "string",
          "description": "ulid",
          "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
        }
      },
      "required": ["id"]
    },
    "tymestamp": {
      "type": "string"
    },
    "required": []
  }
}
