{
  "name": "sending-func",
  "version": "1.11.4",
  "license": "UNLICENSED",
  "type": "commonjs",
  "scripts": {
    "build": "yarn openapi:bundle && yarn generate && tsc",
    "watch": "tsc --w",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --fix src",
    "lint:check": "eslint src",
    "start": "func start",
    "openapi:bundle": "yarn node copy-commons-definitions.js && yarn openapi:bundle:internal && yarn openapi:bundle:external",
    "openapi:bundle:internal": "bundle-api-spec -i openapi/index_internal.yaml.template -o openapi/index.yaml -V $npm_package_version",
    "openapi:bundle:external": "bundle-api-spec -i openapi/index_external.yaml.template -o openapi/index_external.yaml -V $npm_package_version",
    "generate": "yarn generate:definitions && yarn generate:backend-notification-hub && yarn generate:session-manager",
    "generate:definitions": "rimraf ./src/generated/definitions && shx mkdir -p ./src/generated/definitions && gen-api-models --api-spec ./openapi/index.yaml --no-strict --out-dir ./src/generated/definitions",
    "generate:backend-notification-hub": "rimraf ./src/generated/notifications && shx mkdir -p ./src/generated/notifications && gen-api-models --strict 0 --api-spec https://raw.githubusercontent.com/pagopa/io-backend/v8.10.1/notification_queue_messages.yaml --out-dir ./src/generated/notifications",
    "generate:session-manager": "rimraf ./src/generated/session-manager && shx mkdir -p ./src/generated/session-manager && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-auth-n-identity-domain/refs/tags/io-session-manager-internal@0.8.0/apps/io-session-manager-internal/api/internal.yaml --no-strict --out-dir ./src/generated/session-manager --request-types --response-decoders --client",
    "version": "yarn bump:openapi:internal && yarn bump:openapi:external",
    "bump:openapi:internal": "bundle-api-spec -i openapi/index.yaml -o openapi/index.yaml -V $npm_package_version && git add openapi/index.yaml",
    "bump:openapi:external": "bundle-api-spec -i openapi/index_external.yaml -o openapi/index_external.yaml -V $npm_package_version && git add openapi/index_external.yaml",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@azure/functions": "^3.2.0",
    "@pagopa/eslint-config": "^4.0.3",
    "@pagopa/openapi-codegen-ts": "^14.0.0",
    "@types/express": "^4.17.11",
    "@types/node": "^20.17.30",
    "@types/node-fetch": "^2.5.7",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "8.57.1",
    "prettier": "3.2.5",
    "rimraf": "^6.0.1",
    "shx": "^0.3.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/identity": "^4.5.0",
    "@azure/storage-queue": "^12.4.0",
    "@pagopa/express-azure-functions": "^2.1.1",
    "@pagopa/io-functions-commons": "^29.3.0",
    "@pagopa/ts-commons": "^12.5.0",
    "abort-controller": "^3.0.0",
    "applicationinsights": "^1.8.10",
    "azure-storage": "^2.10.3",
    "express": "^4.15.3",
    "fp-ts": "^2.10.5",
    "io-ts": "^2.2.16",
    "node-fetch": "^2.6.7",
    "redis": "^4.6.13",
    "ts-pattern": "^4.0.5",
    "winston": "^3.2.1"
  }
}
