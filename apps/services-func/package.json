{
  "name": "services-func",
  "version": "1.0.1",
  "license": "UNLICENSED",
  "type": "commonjs",
  "scripts": {
    "build": "yarn bump:openapi && yarn generate && tsc",
    "watch": "tsc --w",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --fix src",
    "lint:check": "eslint src",
    "start": "func start --port 7073",
    "version": "yarn bump:openapi",
    "bump:openapi": "yarn node copy-commons-definitions.js && bundle-api-spec -i openapi/index.yaml -o openapi/index.yaml -V $npm_package_version && git add openapi/index.yaml",
    "generate": "yarn generate:definitions && yarn generate:pagopa-ecommerce && yarn generate:notify && yarn generate:remote-content",
    "generate:definitions": "rimraf ./src/generated/definitions && shx mkdir -p ./src/generated/definitions && gen-api-models --api-spec ./openapi/index.yaml --no-strict --out-dir ./src/generated/definitions",
    "generate:remote-content": "rimraf src/generated/remote-content && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-functions-services-messages/master/openapi/index_external.yaml --no-strict --out-dir src/generated/remote-content --request-types --response-decoders --client",
    "generate:pagopa-ecommerce": "rimraf src/generated/pagopa-ecommerce && shx mkdir -p src/generated/pagopa-ecommerce && gen-api-models --api-spec ./openapi/pagopa-ecommerce.yaml --no-strict --out-dir ./src/generated/pagopa-ecommerce --request-types --response-decoders --client",
    "generate:notify": "rimraf src/generated/notify && shx mkdir -p src/generated/notify && gen-api-models --api-spec ./openapi/notify.yaml --no-strict --out-dir ./src/generated/notify --request-types --response-decoders --client",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@azure/functions": "^3.2.0",
    "@pagopa/eslint-config": "^4.0.3",
    "@pagopa/openapi-codegen-ts": "^14.0.0",
    "@types/documentdb": "^1.10.13",
    "@types/express": "^4.17.11",
    "@types/html-to-text": "^1.4.31",
    "@types/lolex": "^5.1.6",
    "@types/node": "^20.17.30",
    "@types/node-fetch": "^2.5.7",
    "@types/nodemailer": "^4.6.2",
    "@types/semver": "^7",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "8.57.1",
    "prettier": "3.2.5",
    "rimraf": "^6.0.1",
    "shx": "^0.3.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/identity": "^4.5.0",
    "@azure/storage-queue": "^12.4.0",
    "@pagopa/express-azure-functions": "^2.1.1",
    "@pagopa/io-app-email-templates": "^0.5.1",
    "@pagopa/io-backend-notifications-sdk": "^9.7.0",
    "@pagopa/io-functions-admin-sdk": "^1.10.1",
    "@pagopa/io-functions-commons": "^29.3.0",
    "@pagopa/ts-commons": "^12.5.0",
    "abort-controller": "^3.0.0",
    "applicationinsights": "^1.8.10",
    "azure-storage": "^2.10.3",
    "date-fns": "^4.1.0",
    "documentdb": "^1.15.3",
    "express": "^4.15.3",
    "fast-check": "^1.16.0",
    "fp-ts": "^2.16.5",
    "html-to-text": "^4.0.0",
    "io-ts": "^2.2.21",
    "io-ts-types": "^0.5.19",
    "lolex": "^6.0.0",
    "monocle-ts": "^2.3.13",
    "newtype-ts": "^0.3.5",
    "node-fetch": "^2.6.7",
    "nodemailer": "^6.4.16",
    "redis": "^4.6.13",
    "remove-markdown": "^0.5.0",
    "semver": "^7.7.2",
    "ts-pattern": "^4.0.5",
    "winston": "^3.2.1"
  }
}
